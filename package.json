{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "bootstrap": "npm run db:reset:seed",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "clean": "rm -rf node_modules && rm -rf .cache && rm -rf build",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "npx prisma db seed",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "linter": "eslint ./app ./cypress ./prisma --fix",
    "formatter": "prettier ./app ./cypress ./prisma --write",
    "start": "remix-serve build/index.js",
    "test:e2e:cypress": "cypress run --browser chrome",
    "test:unit:jest": "jest",
    "test:unit:vitest": "vitest run"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@prisma/client": "^4.3.1",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "daisyui": "^2.36.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@swc/jest": "^0.2.23",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.7.16",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.4.0",
    "cypress": "^10.8.0",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.2.3",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": ">=14"
  }
}
